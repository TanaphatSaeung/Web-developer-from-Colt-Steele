<% layout('../layouts/boilerplate') %>
<a class="card-link btn btn-primary" href="/campground"><- All camps</a>
<div class="row mb-3">
  <div class="col-6 offset-3">
    <div class="card" style="width: 25vw">
      <img
        src="<%= campgrounds.image %>"
        class="card-img-top"
        alt="<%= campgrounds._id %>"
      />
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.title %></h5>
        <p class="card-text"><%= campgrounds.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campgrounds.location %></li>
        <li class="list-group-item">$<%= campgrounds.price %> /night</li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <a class="card-link btn btn-primary" href="/campground/<%= campgrounds._id %>/edit">Edit</a>
        <form
          action="/campground/<%= campgrounds._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button> <br />
        </form>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  </div>
</div>
